header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      - const firstName = user.name.split(' ')[0]
      button.nav__el.nav__el--logout Logout
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${firstName}`)
        span= firstName
    else
      a.nav__el(href='/login') Login
      a.nav__el.nav__el--cta(href='/signup') Sign up